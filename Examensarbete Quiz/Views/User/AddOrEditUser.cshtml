@model User

<div class="container">
    <h3>Add new User</h3>
    <form class="form" asp-action="AddOrEditUser" autocomplete="off">
        <input type="hidden" asp-for="UserID" />


        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="UserFirstName">FirstName</label>
            <div class="col-sm-10">
                <input asp-for="UserFirstName" class="form-control" placeholder="Enter First Name">
                <span asp-validation-for="UserFirstName" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="UserLastName">LastName</label>
            <div class="col-sm-10">
                <input asp-for="UserLastName" class="form-control" placeholder="Enter Last Name">
                <span asp-validation-for="UserLastName" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="UserAge">Age</label>
            <div class="col-sm-10">
                <input asp-for="UserAge" class="form-control" placeholder="Enter Age">
                <span asp-validation-for="UserAge" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label class="col-form-label mt-4" asp-for="UserGender">Gender</label>
            <div class="col-sm-10">
                <input asp-for="UserGender" class="form-control" placeholder="Enter Gender">
                <span asp-validation-for="UserGender" class="text-danger"></span>
            </div>
        </div>


        <div class="container my-3 bg-transparent">
            <div class="col-md-12 text-left">
                <div class="form-group">

                    <input type="submit" value="Submit" class="btn btn-outline-dark" />
                    <a asp-action="Index" class="btn btn-outline-dark">View all users</a>

                </div>
            </div>
        </div>
    </form>
</div>